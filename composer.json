{
  "name": "solophp/configs",
  "type": "library",
  "description": "Simple and flexible configuration management library with dot notation support",
  "keywords": [
    "configs",
    "configuration",
    "php",
    "array",
    "dot-notation",
    "settings"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\Configs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\Configs\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
